              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/conversations/{id}": {
      "get": {
        "summary": "Get a conversation",
        "description": "Returns a conversation by ID",
        "tags": ["Conversations"],
        "security": [
          {
